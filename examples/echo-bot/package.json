{
  "name": "echo-bot",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "4.11.4",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.1.9",
    "@twihike/eslint-config": "0.1.15",
    "@twihike/prettier-config": "0.1.15",
    "@twihike/stylelint-config": "0.1.15",
    "@types/jest": "26.0.23",
    "@types/node": "16.0.0",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "chat-ui-react": "^0.2.14",
    "cross-env": "7.0.3",
    "eslint": "7.30.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unicorn": "34.0.1",
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "stylelint": "13.13.1",
    "typescript": "4.3.5",
    "web-vitals": "2.1.0"
  },
  "scripts": {
    "start": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier --check src",
    "format": "run-s format:*",
    "format:eslint": "eslint --fix src",
    "format:prettier": "prettier --write src",
    "test": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": "eslint",
    "*.{css}": "stylelint"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@twihike"
  },
  "stylelint": {
    "extends": "@twihike/stylelint-config"
  },
  "prettier": "@twihike/prettier-config",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
